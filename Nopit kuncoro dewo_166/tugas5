<!-- Fungsi Void Text -->
<br>
<?php
	function name($text="dewo"){
		echo " $text <br>";
	}
	function nim($no="1415015166"){
		echo "NIM $no <br>";
	}
	name();
	nim();
	
?>
<br>
<!-- Fungsi Aritmatika</h2> -->
<?php
	function tambah($a,$b){
		echo "<br>";
		$hasil = $a + $b;
		return $hasil;
	}
	function kurang($a,$b){
		echo "<br>";
		$hasil = $a - $b;
		return $hasil;
	}
	function kali($a,$b){
		echo "<br>";
		$hasil = $a * $b;
		return $hasil;
	}
	function bagi($a,$b){
		echo "<br>";
		$hasil = $a / $b;
		return $hasil;
	}
	$hasil = tambah(36,15);
	echo $hasil;
	$hasil = kurang(26,19);
	echo $hasil;
	$hasil = kali(5,7);
	echo $hasil;
	$hasil = bagi(90,3);
	echo $hasil;
?>
